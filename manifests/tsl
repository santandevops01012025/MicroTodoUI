apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
name: ui-ingress
namespace: default
annotations:
kubernetes.io/ingress.class: nginx
cert-manager.io/cluster-issuer: "letsencrypt-prod"
spec:
tls:
- hosts:
- ui.santansre.shop
secretName: ui-santansre-tls
rules:
- host: ui.santansre.shop
http:
paths:
- path: /
pathType: Prefix
backend:
service:
name: ui-service
port:
number: 80
